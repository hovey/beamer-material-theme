% ~~~~~~~~~~~~~~~
% ~ Inner Theme ~
% ~~~~~~~~~~~~~~~
% Defines the typesetting of "inner" elements (the presentation content).
\mode<presentation>

\setbeamercolor{background canvas}{bg=bgcolor-03}

% Title page
\defbeamertemplate*{title page}{material}[1][]
{
  \makebox[\linewidth][c]{%
  \begin{minipage}[t][\paperheight]{\paperwidth}
    \raggedright
    \begin{tcolorbox}[
      enhanced,
      colback=primary-color,
      coltext=primary-color-text,
      sharp corners=all,
      boxrule=0mm,
      toprule=-0.3mm,
      fuzzy shadow={0mm}{-0.6mm}{0mm}{0.2mm}{shadow!40!bgcolor-03}, % bottomSmall
      fuzzy shadow={0mm}{-0.2mm}{0mm}{0.2mm}{shadow!20!bgcolor-03}, % bottomBig
      fuzzy shadow={0mm}{ 0.6mm}{0mm}{0.2mm}{shadow!40!primary-color}, % topSmall
      fuzzy shadow={0mm}{ 0.2mm}{0mm}{0.2mm}{shadow!20!primary-color}, % topBig
      width=\paperwidth,
      height=0.64\paperheight,
      flushright upper,
      valign=bottom,
      boxsep=0.5cm]
      {\usebeamerfont{title} \inserttitle}\\
      {\usebeamerfont{author}\insertauthor}\\
      {\usebeamerfont{author}\insertdate}
    \end{tcolorbox}
  \end{minipage}%
  }%
  \vfill
}

% Items
\setbeamertemplate{enumerate items}[circle]
\setbeamertemplate{itemize items}{\Large $\bullet$}
\setbeamertemplate{itemize items}{\tikz{\fill[color=black, semithick] circle(.1);}}
\setbeamertemplate{itemize subitem}{\tikz{\draw[color=black, semithick] circle(.1);}}
\setbeamertemplate{sections/subsections in toc}[circle]

% Misc
\setbeamerfont{imagesource}{size=\tiny} % font for credits below a picture

% Style hyperlinks
\hypersetup{%
  colorlinks = true,
  linkcolor  = accent-color
}

% Add pagenumber to navigation symbols
\addtobeamertemplate{navigation symbols}{}{%
  \usebeamerfont{footline}%
  \usebeamercolor[fg]{footline}%
  \hspace{1em}%
  \raisebox{1.2pt}[0pt][0pt]{
    \insertframenumber %/\inserttotalframenumber
  }
}

\mode<all>